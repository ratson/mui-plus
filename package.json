{
  "name": "mui-plus-monorepo",
  "private": true,
  "scripts": {
    "prestart": "run-s build",
    "start": "run-p start:*",
    "start:stories": "lerna run start --stream --scope=@mui-plus/stories",
    "start:watch": "tsc --build --watch",
    "pretest": "run-s build",
    "test": "jest",
    "test:stories": "lerna run test --stream --scope=@mui-plus/stories",
    "build": "tsc --build",
    "build:stories": "lerna run build --stream --scope=@mui-plus/stories",
    "clean": "rimraf packages/*/{*.tsbuildinfo,lib,dist}",
    "prepublishOnly": "run-s clean build"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@material-ui/core": "^4.9.0",
    "@types/jest": "^25.1.1",
    "@types/node": "^13",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "babel-jest": "^25.1.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
