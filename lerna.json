{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "master",
      "changelogPreset": "conventionalcommits",
      "conventionalCommits": true,
      "message": "chore: publish"
    }
  },
  "ignoreChanges": [
    "**/*.md"
  ]
}
